extends index

block content

    h1=question.question_title
    p=question.question_body
    p=question.id

    
    if answers
        each answer in answers
            div
                p=answer.answer_body

    form(action=`/questions/${question.id}` method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        h2 Your Answer
        label(for="answer_body")
        textarea(name="answer_body", cols="30", rows="10")
        button(type="submit") Post Your Answer

