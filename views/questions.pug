extends index

block content
    div.main_bar
        div.header_div
            h2#questions_title All Questions
            a(href="/questions/ask" class= "blue_btn") Ask Question

        each question in questions
            div.question_div
                div.stats
                    div.votes_div
                        p 0
                        p votes
                    div.answers_div
                        p 0
                        p answers
                div.content_div
                    a(href=`/questions/${question.id}`)=question.question_title
                    p=question.question_body
